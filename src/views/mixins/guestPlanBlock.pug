mixin guestPlanBlock(plans = {})
    li.plan
        input(type="hidden", name="completed", value=plans.completed)
        input.plan-check__button(type="image", src="https://emojipedia-us.s3.dualstack.us-west-1.amazonaws.com/thumbs/72/microsoft/209/white-heavy-check-mark_2705.png", alt="완료")
        - if (plans.completed === "false")
            span.plan-title__span=plans.title
        - else
            span.plan-title__span.completed=plans.title
        input.plan-title__input(type="text", name="title")
        .buttons
            .buttons-default
                - if (plans.completed === "false")
                    a.edit__button(href="#")
                        img(src="https://emojipedia-us.s3.dualstack.us-west-1.amazonaws.com/thumbs/72/microsoft/209/pencil_270f.png", alt="수정")
                a.remove__button(href="#")
                    img(src="https://emojipedia-us.s3.dualstack.us-west-1.amazonaws.com/thumbs/72/microsoft/209/cross-mark_274c.png", alt="삭제")
            .buttons-edit
                input.edit-check__button(type="button", value="확인")
