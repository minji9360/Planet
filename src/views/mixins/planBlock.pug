mixin planBlock(plans = {})
    li.plan
        form(method="post")
            - const plansId = "'" + plans.id + "'"
            input(type="hidden", name="completed", value=plans.completed)
            input.plan-check__button(type="image", formaction=routes.checkPlan(plans.id), src="https://emojipedia-us.s3.dualstack.us-west-1.amazonaws.com/thumbs/72/microsoft/209/white-heavy-check-mark_2705.png", alt="완료")
        form(method="post")
            - if (plans.completed === "false")
                span.plan-title__span(id=`span${plans.id}`)=plans.title
            - else
                span.plan-title__span.completed(id=`span${plans.id}`)=plans.title
            input.plan-title__input(type="text", name="title", id=`input${plans.id}`, value=plans.title)
            .buttons
                .buttons-default(id=`defaultBtns${plans.id}`)
                    - if (plans.completed === "false")
                        a.edit__button(href="#", onclick=`editPlan(${plansId})`)
                            img(src="https://emojipedia-us.s3.dualstack.us-west-1.amazonaws.com/thumbs/72/microsoft/209/pencil_270f.png", alt="수정")
                    a.remove__button(href=routes.deletePlan(plans.id))
                        img(src="https://emojipedia-us.s3.dualstack.us-west-1.amazonaws.com/thumbs/72/microsoft/209/cross-mark_274c.png", alt="삭제")
                .buttons-edit(id=`editBtns${plans.id}`)
                    input.edit-check__button(type="submit", formaction=routes.editPlan(plans.id), value="확인")
