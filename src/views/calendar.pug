extends layouts/main.pug

block content
    section
        a.prev__btn <
        .content
            .non-clicked-day 
                .month
                    .month-rate
                    span.month-plan-number
                        img.plan-check__image(alt="완료", src="data:image/svg+xml;base64,")
                        | 20 +  
                        img.plan-check__image(alt="미완료", src="data:image/svg+xml;base64,")
                        | 5
                    span.month-plan-total  = 25
            .clicked-day.hidden
                h1.clicked-day__h1 2일 월요일
                .clicked-day-sentence 
                .clicked-day-rate
                ul.clicked-day-content
                    // 그 날의 한 일/할 일
                    li 
                        img.plan-check__image(alt="완료", src="data:image/svg+xml;base64,")
                        span 오늘 한 일
                        a.more__button(id=``, href="#", onclick=`showDetail()`)
                            img(id=`moreDown`, alt="더보기", src="data:image/png;base64,")
                            img.hidden(id=`moreUp`, alt="더보기", src="data:image/png;base64,")
                    li 
                        img.plan-check__image(alt="미완료", src="data:image/svg+xml;base64,")
                        span 오늘 못 한 일
                        a.more__button(id=``, href="#", onclick=`showDetail()`)
                            img(id=`moreDown`, alt="더보기", src="data:image/png;base64,")
                            img.hidden(id=`moreUp`, alt="더보기", src="data:image/png;base64,")
            .calendar
                h1.calendar__h1 2021년 8월
                table.calendar__table
                    thead
                        tr.day__tr
                            th 일
                            th 월
                            th 화
                            th 수
                            th 목
                            th 금
                            th 토
                    tbody.date
        a.next__btn > 
