extends layouts/main.pug
include mixins/planBlock.pug

block content
    section
        a.prev__btn < 
        .day
            - const order = [ 0, 1, 2, 3, 4, 5, 6 ]
            - const days = [ "일", "월", "화", "수", "목", "금", "토"]
            ol.day__list#slider
                each i in order
                    li.day__item
                        - let todaySentence
                        .title
                            .title__date
                                span=thisWeek.date[i]
                                |일 
                                span.day=days[thisWeek.day[i]]
                                |요일
                            .title__description
                                - let flag = 0
                                - if (user.sentence.length==0)
                                    p.description 입력창 왼쪽 버튼을 눌러 입력해주세요.
                                - else
                                    each item in user.sentence
                                        - if (item.daily===true && thisWeek.year[i]==item.year && thisWeek.month[i]==item.month && thisWeek.date[i]==item.date)
                                            p.description(id=`description${i}`) !{item.content.replace(/\n/g, '<br />')}
                                            - flag = 1
                                            - todaySentence = JSON.stringify(item)
                                            - break
                                    - if (flag==0)
                                        p.description 입력창 왼쪽 버튼을 눌러 입력해주세요.
                        .todolist-box
                            ul.todolist
                                each item in user.plans
                                    - if (thisWeek.year[i]==item.year && thisWeek.month[i]==item.month && thisWeek.date[i]==item.date)
                                        +planBlock(
                                            i,
                                            {
                                            id:item._id,
                                            title:item.title,
                                            content:item.content,
                                            important:item.important,
                                            completed: item.completed
                                        })
                        form.add-form(id=`addForm${i}`, method="post", autocomplete="off")
                            - if (i > 0)
                                .add-title(id=`titleBox${i}`)
                                    a.option__button(type="button", onclick=`slidePlanDetail(${i});`)
                                        img.up__image(id=`upImage${i}`, src="data:image/png;base64,")
                                        img.down__image.hidden(id=`downImage${i}`, src="data:image/png;base64,")
                                    input.add-title__input(id=`titleInput${i}`, type="text", name="title", placeholder="할 일", required)
                                    button.add-title__button(id=`addButton${i}`, formaction=`plans${routes.uploadPlan}`) 추가
                                    button.edit-check__button.hidden(id=`editButton${i}`, formaction=`plans${routes.editPlan}`) 수정
                                .add-detail(id=`detailBox${i}`)
                                    textarea.add-detail__input(id=`contentInput${i}`, name="content", placeholder="상세 내용을 입력해주세요.")
                                    .sentence__button
                                        button.add-detail__button.hidden(id=`contentButton${i}`, formaction=`plans${routes.uploadSentence}`) 추가
                                        button.edit-check__button.hidden(id=`editSentenceButton${i}`, formaction=`plans${routes.editPlan}`) 수정
                                    .detail-buttons
                                        label(for=`important${i}`, id=`importantLabel${i}`, onclick=`updateImportant(${i});`)
                                            img.gray__button(id=`importantGray${i}`, src="data:image/png;base64,")
                                            img.color__button.hidden(id=`importantColor${i}`, src="data:image/png;base64,")
                                            | 중요
                                        .sentence-buttons.hidden(id=`sentenceButtons${i}`)
                                            label(for=`senteceDaily${i}`, onclick=`clickDaily(${i}, ${todaySentence});`)
                                                img.gray__button.hidden(id=`dailyGray${i}`, src="data:image/png;base64,")
                                                img.color__button(id=`dailyColor${i}`, src="data:image/png;base64,")
                                                | 오늘의 목표&nbsp;
                                            label(for=`senteceGoal${i}`, onclick=`clickGoal(${i});`)
                                                img.gray__button(id=`goalGray${i}`, src="data:image/png;base64,")
                                                img.color__button.hidden(id=`goalColor${i}`, src="data:image/png;base64,")
                                                | 최상위 목표
                                        a.sentence__button(id=`sentenceButton${i}`, type="button", onclick=`clickSentence(${i}, ${todaySentence});`)
                                            img.gray__button(id=`sentenceGray${i}`, src="data:image/png;base64,")
                                            img.color__button.hidden(id=`sentenceColor${i}`, src="data:image/png;base64,")
                                            | 목표
                                        input.hidden(id=`important${i}`, type="checkbox", name="important", value="false")
                                        input.setence__radio(id=`senteceDaily${i}`, type="radio", name="daily", value="true", checked)
                                        input.setence__radio(id=`senteceGoal${i}`, type="radio", name="daily", value="false")
                                        input(id=`idInput${i}`, type="hidden", name="id")
                            - else
                                .add-title
                                    a.option__button(type="button", disabled)
                                        img(src="data:image/png;base64,")
                                    input.add-title__input(type="text", name="title", placeholder="지난 날짜입니다.", disabled)
                                    button.add-title__button(disabled) 추가
                            input(type="hidden", name="category", value="공부")
                            input(type="hidden", name="year", value=thisWeek.year[i])
                            input(type="hidden", name="month", value=thisWeek.month[i])
                            input(type="hidden", name="date", value=thisWeek.date[i])
        a.next__btn > 
